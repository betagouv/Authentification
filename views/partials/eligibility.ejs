                <label class="fr-label" for="newsletter-email">
                    Entrez votre adresse électronique professionnelle
                </label>
                <div class="fr-input-wrap fr-input-wrap--addon">
                    <input id="emailValue" class="fr-input" title="nom@domaine.fr" autocomplete="email" attributes="[object Object]" aria-describedby="newsletter-email-hint-text newsletter-email-messages" placeholder="(ex. : nom@domaine.fr)" type="email">
