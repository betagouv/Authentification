{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "express.d.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
